
<h1>Vendor Info</h1>
<form action="/Vendor/Add" method="POST">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" placeholder="Product Name">
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <textarea rows="3" class="form-control" id="Description" name="Description" placeholder="Product Description"></textarea>
    </div>
    <div class="form-group">
        <label for="Price">Price</label>
        <input type="number" class="form-control" id="Price" name="Price" placeholder="Product Price">
    </div>
    <select class="form-control">
        @{ foreach (var vendor in ViewBag.Vendors)
            {
                <option value="@vendor">@vendor.FirstName @vendor.LastName</option>
            }
        }
    </select>
    <button type="submit" class="btn btn-default">Submit</button>
</form>